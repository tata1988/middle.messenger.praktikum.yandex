{
  "name": "project-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all",
      "pre-push": "npm run other command"
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "start": "npm run build && node server.js",
    "preview": "vite preview",
    "lint:eslint": "eslint src",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "liny:fix": "eslint --fix --ext .ts, .",
    "lint:tsc": "npx tsc --noEmit",
    "watch-tsc": "tsc --watch --noEmit",
    "test": "mocha",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "chai": "^4.3.8",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "esm-loader": "^0.1.0",
    "esm-loader-css": "^1.0.5",
    "esm-loader-typescript": "^1.0.5",
    "esmock": "^2.5.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.2.5",
    "prettier": "^3.0.2",
    "sass": "^1.64.1",
    "sinon": "^16.0.0",
    "sinon-chai": "^3.7.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "@types/uuid": "^9.0.2",
    "express": "^4.18.2",
    "express-history-api-fallback": "^2.2.1",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
