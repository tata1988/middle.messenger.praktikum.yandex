<li class="chat{{#if isSelected }} chat_active{{/if}}">
    <div class="chat__img">
        <img src={{avatar}} alt="avatar">
    </div>
 
    <div class="chat__block chat__block-message">
        <div class="chat__title">{{title}}</div>
        <div class="chat__wrapper-message">
            <p class="chat__message">{{last_message}}</p>
        </div>
        
    </div>
    <div class="chat__block chat__date">
        <div class="chat__date">{{time}}</div>
        {{#if unread_count }}
            <div class="chat__count">{{unread_count}}</div>
        {{/if}}
    </div>
</li>

