<main class="main">
  <div class="main__wrapper">
    <form class="main__form form" ref="form">
      <div class="main__form-block">
        {{{Title title="Вход" className="form__title title"}}}

        {{{ Label for="login" value="Логин" className="form__label label"}}}
        {{{ Input type="text" name="login" placeholder="ФИО" id="login" className="input" ref="login" pattern=pattern.login title=titleLogin}}}
        {{{ Line className="line line_blue"}}}
        {{{ Error }}}
        {{{ Label for="password" value="Пароль" className="form__label label"}}}
        {{{ Input type="text" name="password" placeholder="••••••••••••" id="password" className="input"
        ref="password" pattern=pattern.password title=titlePassword}}}
        {{{Line className="line line_blue"}}}
      </div>
      {{{Button type='submit' label="Вход" className="btn" onClick=login}}}
    </form>
    {{{Button type='button' label="Нет аккаунта?" className="link" onClick=link}}}
  </div>
</main>